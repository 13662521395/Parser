/* miniprogram/pages/component/component.wxss */
.link {
  color: #586c94;
}
.link-hover {
  text-decoration: underline;
}
code {
  font-style: italic;
  color: #005cc5;
  margin-left: 1px;
  margin-right: 3px;
  font-family: monospace;
}
.table {
  font-size: 14px;
  border-left: 1px solid #dfe2e5;
  border-top: 1px solid #dfe2e5;
}
.tr {
  display: flex;
}
.th {
  font-weight: bold;
}
.td, .th {
  padding: 3px;
  border-right: 1px solid #dfe2e5;
  border-bottom: 1px solid #dfe2e5;
  display: flex;
  justify-content: center;
  align-items: center;
}